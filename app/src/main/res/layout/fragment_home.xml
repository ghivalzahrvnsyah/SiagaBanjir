                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_flood_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Berlangsung banjir :"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/warning"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Berpotensi banjir :"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />


            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp"
                android:drawableLeft="@drawable/ic_status_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Status :"
                android:textColor="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/engineStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_engine_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Status Mesin :"
                android:textColor="@color/white"
                android:visibility="visible"


                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <TextView
                android:id="@+id/waterHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0 cm"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView20" />

            <TextView
                android:id="@+id/activeFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="RT --"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/textView23"
                app:layout_constraintTop_toTopOf="@+id/textView23" />

            <TextView
                android:id="@+id/onGoingFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="RT --"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toTopOf="@+id/textView24" />

            <TextView
                android:id="@+id/statusFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableRight="@drawable/ic_circle_normal"
                android:drawablePadding="4dp"
                android:text="Normal"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/textView25"
                app:layout_constraintTop_toTopOf="@+id/textView25" />

            <TextView
                android:id="@+id/engineStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Aktif"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/engineStatusTextView"
                app:layout_constraintTop_toTopOf="@+id/engineStatusTextView" />

            <LinearLayout
                android:id="@+id/buttonPumpEngine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/engineStatusTextView"
                app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/stopEngineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/dark_grey"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Matikan Mesin "
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/startEngineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/button_lapor"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Nyalakan Mesin"
                    android:textSize="12sp" />
            </LinearLayout>


